<body>
    <div class="container">
        <h1>Complaint Management System - Main Page</h1>
        <button id="register-complaint">Register Complaint</button>
        <button id="resolve-complaint">Resolve Complaint</button>
        <!-- Add a click event listener to the "List of Complaints" button -->
        <button id="list-complaints">List of Complaints</button>
        <!-- Modify the "Exit" button with a confirmation dialog -->
        <button id="exit" onclick="confirmExit()">Exit</button>
    </div>

    <script>
        // Get a reference to the "Register Complaint" button
        var registerButton = document.getElementById("register-complaint");

        // Add a click event listener to the button
        registerButton.addEventListener("click", function() {
            // Redirect to RegisterC.php
            window.location.href = "RegisterC.php";
        });

        // Get a reference to the "Resolve Complaint" button
        var resolveButton = document.getElementById("resolve-complaint");

        // Add a click event listener to the button
        resolveButton.addEventListener("click", function() {
            // Redirect to ResolveC.php
            window.location.href = "ResolveC.php";
        });

        // Get a reference to the "List of Complaints" button
        var listButton = document.getElementById("list-complaints");

        // Add a click event listener to the button
        listButton.addEventListener("click", function() {
            // Redirect to ListC.php
            window.location.href = "ListC.php";
        });

        // Function to confirm exit and redirect to login.php
        function confirmExit() {
            var confirmExit = confirm("Are you sure you want to exit and go to the login page?");
            if (confirmExit) {
                // Redirect to the login page
                window.location.href = "login.php"; // Replace with your login page URL
            }
        }
    </script>
